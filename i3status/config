volume master {
        format = "   %volume "
        format_muted = "  (%volume) "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

ethernet _first_ {
        format_up = " E: %ip (%speed) "
        format_down = " E: down "
}

# battery all {
#         format = " %status %percentage "
# }

battery 0 {
        format = "%status %percentage %remaining %emptytime"
        format_down = "No battery"
        status_chr = "⚡ CHR"
        status_bat = "🔋 BAT"
        status_unk = "? UNK"
        status_full = "☻ FULL"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

disk "/" {
        format = " %avail"
}

load {
        format = "  CPU: %1min "
}

cpu_temperature 0 {
        format = "  %degrees°C "
}

memory {
        format = " 󰍛 Ram %used "
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime date {
        format = "  %a %d-%m-%Y "
}
tztime clock {
        format = "   %H:%M"
}
